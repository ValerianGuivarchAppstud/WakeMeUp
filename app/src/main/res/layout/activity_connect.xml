<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".connect.ConnectActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@id/creer_son_compte"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/main_logo"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/fb_login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login_button"
        style="@style/bouton_arrondi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:text="Connection Facebook"
        app:layout_constraintBottom_toTopOf="@+id/creer_son_compte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/creer_son_compte"
        style="@style/bouton_arrondi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/connect_button_se_connecter"
        android:layout_marginStart="32dp"

        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:text="@string/action_sign_up"
        app:layout_constraintBottom_toTopOf="@+id/connect_button_se_connecter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fb_login_button" />

    <Button
        android:id="@+id/connect_button_se_connecter"
        style="@style/bouton_arrondi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/connect_button_continuer_sans_compte"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:text="@string/action_login"
        app:layout_constraintBottom_toTopOf="@+id/connect_button_continuer_sans_compte"
        app:layout_constraintEnd_toEndOf="@+id/fb_login_button"
        app:layout_constraintStart_toStartOf="@+id/fb_login_button" />

    <Button
        android:id="@+id/connect_button_continuer_sans_compte"
        style="@style/bouton_arrondi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="@string/bouton_continuer_sans_compte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fb_login_button"
        app:layout_constraintStart_toStartOf="@+id/fb_login_button" />


</androidx.constraintlayout.widget.ConstraintLayout>