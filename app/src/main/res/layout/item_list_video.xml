<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="5dp">


    <RelativeLayout
        android:id="@+id/relative_layout_gauche_list_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_artwork"
            android:layout_width="50dp"
            android:layout_height="30dp"

            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/logo_video"
            android:src="@drawable/music_placeholder" />

        <ImageView
            android:id="@+id/iv_play_active"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/tv_duration"
            android:layout_alignStart="@id/iv_artwork"
            android:layout_alignTop="@id/iv_artwork"
            android:layout_alignEnd="@id/iv_artwork"
            android:layout_alignBottom="@id/iv_artwork"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/play"
            android:src="@drawable/ic_play_circle_outline_white" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_artwork"
            android:layout_alignStart="@+id/iv_artwork"
            android:layout_alignEnd="@+id/iv_artwork"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/relative_layout_gauche_list_video"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titre_de_la_chanson"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/artiste" />
    </LinearLayout>


</RelativeLayout>