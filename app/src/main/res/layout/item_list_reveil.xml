<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        style="@style/AppTheme.ItemReveil"
        android:id="@+id/reveil_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/AppTheme.ItemReveil"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_reveil_jours" />

            <TextView
                android:id="@+id/item_reveil_heure"
                style="@style/AppTheme.HeureReveil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/id_constraint_right"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="09:45" />

            <TextView
                android:id="@+id/item_reveil_jours"
                style="@style/AppTheme.HeureJours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/divider"
                app:layout_constraintEnd_toEndOf="@+id/item_reveil_heure"
                app:layout_constraintStart_toStartOf="@+id/item_reveil_heure"
                app:layout_constraintTop_toBottomOf="@+id/item_reveil_heure"
                tools:text="lundi, mardi, jeudi, vendredi" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/id_constraint_right"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/item_reveil_jours"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_reveil_heure"
                app:layout_constraintTop_toTopOf="@+id/item_reveil_heure">

                <Switch
                    android:id="@+id/item_reveil_switch"
                    style="@style/AppTheme.BoutonItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:checked="true"
                    app:layout_constraintBottom_toTopOf="@+id/fav_tv_delete"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:id="@+id/fav_tv_delete"
                    style="@style/AppTheme.BoutonItem"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="4"
                    android:backgroundTint="@color/design_default_color_surface"
                    android:contentDescription="@string/delete_clock"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_reveil_switch"
                    app:srcCompat="@drawable/delete_circle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
