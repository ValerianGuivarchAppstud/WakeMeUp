<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_edit_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Modifier vos informations" />
    <Button
        android:id="@+id/button_gestionFavori"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Gestion des favoris" />
    <Button
        android:id="@+id/button_gestion_historique"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Supprimer l'historique de recherche" />
</LinearLayout>