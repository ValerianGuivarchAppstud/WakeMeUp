<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reveil.ReveilSonneActivity"
    android:orientation="vertical">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtubePlayReveil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showFullScreenButton="false" />

    <Button
        android:id="@+id/button_favoris_reveil_sonne"
        style="@style/AppTheme.BoutonReveil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/youtubePlayReveil"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:text="@string/favori" />

    <TextView
        android:id="@+id/date_sonnerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_favoris_reveil_sonne"
        android:layout_marginTop="30dp"
        android:text="DATE"
        android:textSize="15sp"
        style="@style/AppTheme.BoutonReveil"/>

    <TextView
        android:id="@+id/heure_sonnerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/date_sonnerie"
        style="@style/AppTheme.BoutonReveil"
        android:textSize="80sp"

        android:text="HEURE"/>


    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/bouton_reveil_snooze"
            style="@style/snooze"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/snooze" />

        <TextView
            style="@style/AppTheme.BoutonReveil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bouton_reveil_snooze"
            android:layout_centerInParent="true"
            android:text="@string/snooze"
            android:textColor="@color/green" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/bouton_reveil_stop"
            style="@style/stop"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/stop"
            android:hapticFeedbackEnabled="true"/>


        <TextView
            style="@style/AppTheme.BoutonReveil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bouton_reveil_stop"
            android:layout_centerInParent="true"
            android:text="@string/stop"
            android:textColor="@color/red" />
    </RelativeLayout>

</RelativeLayout>