<resources>
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:actionBarStyle">@style/appbarstyle</item>
        <item name="android:textColor">@color/texte</item>

    </style>

    <style name="appbarstyle" parent="AppTheme">
        <item name="android:textColor">@color/texte_bouton</item>
        <item name="android:background">@color/background</item>
    </style>


    <style name="AppTheme.BoutonReveil">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.HeureReveil">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="snooze">
        <item name="android:background">@drawable/snooze</item>
        <item name="android:backgroundTint">@color/alarm_snooze</item>
    </style>

    <style name="stop">
        <item name="android:background">@drawable/alarm_note_off</item>
        <item name="android:backgroundTint">@color/alarm_stop</item>
    </style>

    <style name="AppTheme.BoutonItem">
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.BoutonDay" parent="AppTheme">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/texte_bouton</item>
        <item name="android:textSize">@dimen/text_very_small</item>
        <item name="android:background">@drawable/round_button</item>
    </style>
    <style name="AppTheme.HeureJours">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="my_time_picker_style">
        <item name="android:textSize">34sp</item>
    </style>


    <style name="bouton_arrondi">
        <item name="cornerRadius">@null</item>
        <item name="elevation">2dp</item>
        <item name="iconPadding">8dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/texte_bouton</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

</resources>
